@page "/channels/delete"
@using Microsoft.EntityFrameworkCore
@using MyRssClient.Models
@using System.Text.Json
@inject IDbContextFactory<MyRssClient.Data.MyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Channel</h2>
    <hr />
    @if (channel is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@channel.Title</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">RssLink</dt>
            <dd class="col-sm-10">@channel.RssLink</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">URLs</dt>
            <dd class="col-sm-10">@JsonSerializer.Serialize(channel.URLs)</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@channel.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Language</dt>
            <dd class="col-sm-10">@channel.Language</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LastPublishDate</dt>
            <dd class="col-sm-10">@channel.LastPublishDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LastFetchAt</dt>
            <dd class="col-sm-10">@channel.LastFetchAt</dd>
        </dl>
        @* <dl class="row">
            <dt class="col-sm-2">SelectedImagePath</dt>
            <dd class="col-sm-10">@channel.SelectedImagePath</dd>
        </dl> *@
        <EditForm method="post" Model="channel" OnValidSubmit="DeleteChannel" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(channel is null)">Delete</button> |
            <a href="/channels">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Channel? channel;

    [SupplyParameterFromQuery]
    private Guid Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        channel = await context.Channels.FirstOrDefaultAsync(m => m.Id == Id);

        if (channel is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteChannel()
    {
        using var context = DbFactory.CreateDbContext();
        context.Channels.Remove(channel!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/channels");
    }
}
